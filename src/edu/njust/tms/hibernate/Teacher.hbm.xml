<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="edu/njust/tms/hibernate">
	<class
		name="Teacher"
		table="teacher"
	>
		<meta attribute="sync-DAO">true</meta>
		<id
			name="id"
			type="string"
			column="number"
		>
			<generator class="assigned"/>
		</id>

		<property
			name="name"
			column="name"
			type="string"
			not-null="true"
			length="20"
		/>
		<property
			name="password"
			column="password"
			type="string"
			not-null="true"
			length="20"
		/>
		<property
			name="sex"
			column="sex"
			type="string"
			not-null="true"
			length="5"
		/>
		<property
			name="age"
			column="age"
			type="java.lang.Long"
			not-null="true"
			length="19"
		/>
		<property
			name="department"
			column="department"
			type="string"
			not-null="true"
			length="50"
		/>
		<property
			name="post"
			column="post"
			type="string"
			not-null="true"
			length="20"
		/>
		<property
			name="remark"
			column="remark"
			type="string"
			not-null="false"
			length="100"
		/>


	</class>	
</hibernate-mapping>